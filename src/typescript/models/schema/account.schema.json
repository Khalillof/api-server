{
  "name": "account",
  "loadref":true,
  "schema": {
    "username": {
      "type": "String",
      "unique": true,
      "lowercase": true,
      "required": true,
      "minLength": 3,
      "maxLength": 30
    },
    "email": {
      "type": "String",
      "unique": true,
      "lowercase": true,
      "required": true,
      "minLength": 3,
      "maxLength": 30
    },
    "roles": [
      {
        "type": "ObjectId",
        "ref": "role"
      }
    ],
    "active":false,
    "firstname": {
      "type": "String",
      "default": "",
      "maxLength": 50
    },
    "lastname": {
      "type": "String",
      "default": "",
      "maxLength": 50
    },
    "descriptions": {
      "type": "String",
      "default": "",
      "maxLength": 150
    },
    "facebookId": {
      "type": "String",
      "default": ""
    }
  }
}