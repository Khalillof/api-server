{
  "name": "account",
  "loadref":true,
  "schema": {
    "username": {
      "type": "String",
      "unique": true,
      "lowercase": true,
      "required": true,
      "minLength": 3,
      "maxLength": 30
    },
    "email": {
      "type": "String",
      "unique": true,
      "lowercase": true,
      "required": true,
      "minLength": 3,
      "maxLength": 30
    },
    "refreshToken": {
      "type": "String",
      "unique": true,
      "minLength": 10,
      "maxLength": 100
   },
   "refreshToken_expireAt": {
      "type": "Date"
  },
    "active":{
      "type": "Boolean",
      "default":false
    },
    "email_verified":{
      "type": "Boolean",
      "default":false
    },
    "firstname": {
      "type": "String",
      "minLength":3,
      "maxLength": 50
    },
    "lastname": {
      "type": "String",
      "minLength":3,
      "maxLength": 50
    },
    "last_login": {
      "type": "Date"
  },
    "facebookId": {
      "type": "String",
      "default": ""
    },    
    "roles": [
      {
        "type": "ObjectId",
        "ref": "role"
      }
    ]
  }
}