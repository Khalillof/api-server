{
    "name": "comment",
    "active": true,
    "useAuth": [
        "post",
        "put",
        "delete"
    ],
    "useAdmin": [
        "list",
        "delete",
        "search"
    ],
    "schemaObj": {
        "body": {
            "type": "String",
            "required": true,
            "minLength": 3,
            "tagname": "textarea",
            "className":"form-control"
        },
        "user": {
            "type": "ObjectId",
            "ref": "account",
            "required": true,
            "autopopulate": true
        },
        "modelid": {
            "type": "ObjectId",
            "required": true
        }
    }
}