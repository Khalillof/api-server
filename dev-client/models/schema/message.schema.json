{

    "name":"message",
    "active":true,
    "useAuth":["list","get","post","put","delete"], 
    "useAdmin": ["list"],
      "schemaObj":{
        "title":  {
            "type": "String",
            "required": true,
            "minLength": 3,
            "maxLength": 150
        },
        "body":  {
            "type": "String",
            "required": true,
            "minLength": 3
        },
        "sender": {
            "type": "ObjectId",
            "ref": "account",
            "required":true,
            "autopopulate": true
        },
        "recipient": {
            "type": "ObjectId",
            "ref": "account",
            "required":true,
            "autopopulate": true
        }
    }
    }