{
    "name": "message",
    "active": true,
    "useAuth": [
        "list",
        "get",
        "post",
        "put",
        "delete","search","count","route"
    ],
    "useAdmin": [
        "list","search"
    ],
    "schemaObj": {
        "title": {
            "type": "String",
            "required": true,
            "minLength": 3,
            "maxLength": 150,
            "tagName": "input",
            "className":"form-control"
        },
        "body": {
            "type": "String",
            "required": true,
            "minLength": 3,
            "tagName": "textarea",
            "className":"form-control"
        },
        "sender": {
            "type": "ObjectId",
            "ref": "account",
            "required": true,
            "autopopulate": true
        },
        "recipient": {
            "type": "ObjectId",
            "ref": "account",
            "required": true,
            "autopopulate": true
        }
    }
}