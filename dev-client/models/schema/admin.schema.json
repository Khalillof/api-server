{
  "name": "admin",
  "populates":[],
  "useAuth":["list","get","post","put","delete"], 
  "useAdmin": ["list","get","post","put","delete"], 
  "schema": {
    "name": {
      "type": "String",
      "unique": true,
      "lowercase": true,
      "required": true,
      "minLength": 3,
      "maxLength": 30
    },
    "populates":{
      "type": "Array",
      "default": []
    },
    "activate":{
      "type": "Boolean",
      "default": false,
      "required":true
    },
    "admin": {
      "type": "ObjectId",
      "ref": "account",
      "required":true
    },
    "description": {
      "type": "String",
      "minLength":3
    },
    "data": {
      "type": "String",
      "required": true,
      "minLength": 10
    }
  }
}